{
  "name": "growfit-api",
  "version": "1.0.0",
  "private": true,

  "scripts": {
    "dev": "nodemon",
    "dev:ts-node-dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --poll -r tsconfig-paths/register src/main.ts",
    "dev:nest": "nest start --watch --preserveWatchOutput",
    "dev:debug": "nest start --debug --watch --preserveWatchOutput",

    "prebuild": "pnpm prisma:generate",
    "build": "tsc -p tsconfig.build.json",

    "start": "NODE_ENV=production node dist/main.js",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/main.ts",
    "start:debug": "nest start --debug --watch",

    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",

    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:status": "prisma migrate status",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "seed-exercises": "tsx scripts/seed-back-exercises.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-express": "^10.4.15",
    "@prisma/client": "^6.2.1",
    "form-data": "^4.0.4",
    "growfit-shared": "workspace:*",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/express": "^4.17.23",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.5",
    "nodemon": "^3.0.1",
    "prisma": "^6.2.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  }
}
