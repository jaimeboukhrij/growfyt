// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum BodyPart {
    BACK      @map("espalda")
    CHEST     @map("pecho")
    LEGS      @map("piernas")
    ARMS      @map("brazos")
    SHOULDERS @map("hombros")
    CORE      @map("core")
    GLUTES    @map("gluteos")
}

enum Equipment {
    BARBELL         @map("barra")
    DUMBBELL        @map("mancuerna")
    CABLE           @map("cable")
    BODYWEIGHT      @map("peso corporal")
    LEVER_MACHINE   @map("maquina de palanca")
    KETTLEBELL      @map("kettlebell")
    RESISTANCE_BAND @map("banda elastica")
    NO_EQUIPMENT    @map("sin equipamiento")
}

enum Difficulty {
    BEGINNER     @map("principiante")
    INTERMEDIATE @map("intermedio")
    ADVANCED     @map("avanzado")
}

enum Category {
    STRENGTH    @map("fuerza")
    CARDIO      @map("cardio")
    FLEXIBILITY @map("flexibilidad")
    STRETCHING  @map("estiramiento")
}

enum Muscle {
    UPPER_BACK @map("parte superior de la espalda")
    LATS       @map("dorsales")
    TRAPS      @map("trapecios")
    SPINE      @map("columna vertebral")
    RHOMBOIDS  @map("romboides")
    REAR_DELTS @map("deltoides traseros")
    BICEPS     @map("biceps")
    FOREARMS   @map("antebrazo")
    SHOULDERS  @map("hombros")
    GLUTES     @map("gluteos")
    HAMSTRINGS @map("isquiotibiales")
    CHEST      @map("pecho")
    TRICEPS    @map("triceps")
    WAIST      @map("cintura")
}

model User {
    id        String   @id @default(uuid())
    name      String
    email     String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Exercise {
    id               String     @id @default(uuid())
    bodyPart         BodyPart
    category         Category
    createdAt        DateTime   @default(now())
    description      String
    difficulty       Difficulty
    equipment        Equipment
    instructions     String[]
    name             String
    playbackId       String
    primaryMuscle    Muscle
    secondaryMuscles Muscle[]
    slug             String     @unique
    updatedAt        DateTime   @updatedAt
}
